{
  "name": "mesto-backend",
  "version": "1.0.0",
  "description": "Express + MongoDB backend for Mesto project",
  "type": "module",
  "main": "build/server.js",
  "scripts": {
    "dev": "yarn swagger:docs && tsx watch src/server.ts",
    "build": "rimraf build && tsc",
    "start": "node build/server.js",
    "prettier:write": "prettier --write ./**/*.{ts,js} ./*.{json,md,yml} -l",
    "lint": "eslint src/**/*.ts",
    "swagger:docs": "yarn swagger-i18n-extension translate-all ./docs/openapi.yaml",
    "test": "cross-env NODE_ENV=test mocha 'src/**/*.{spec,test}.ts'",
    "test:watch": "mocha --watch",
    "prepare": "husky install",
    "cz": "cz"
  },
  "author": "arty gvozdnkov",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@commitlint/format": "^18.4.3",
    "@types/chai": "^4.3.11",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.5",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "chai": "^5.0.0",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cz-git": "^1.8.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "mocha": "^10.2.0",
    "prettier": "2.8.7",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "5.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.12.1",
    "js-yaml": "^4.1.0",
    "mongoose": "^8.0.4",
    "swagger-i18n-extension": "^1.1.1",
    "swagger-ui-express": "^5.0.0"
  }
}
