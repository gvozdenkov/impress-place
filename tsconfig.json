{
  "compilerOptions": {
    "target": "ESNext",

    // Subpath imports
    // https://habr.com/ru/articles/738132/
    "baseUrl": "./",
    "paths": {
      "#*": ["./src/*"]
    },

    "module": "ESNext",
    "isolatedModules": true,
    "moduleResolution": "node",
    "esModuleInterop": true,

    "allowJs": true,
    "checkJs": false,
    "outDir": "build",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build"]
}
